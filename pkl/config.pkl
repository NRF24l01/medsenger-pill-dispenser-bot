@go.Package { name = "github.com/tikhonp/medsenger-pill-dispenser-bot/internal/config" }
module config

import "package://pkg.pkl-lang.org/pkl-go/pkl.golang@0.10.0#/go.pkl"

class Server {
  /// The hostname of this application.
  host: String

  /// The port to listen on.
  port: UInt16

  /// Sets server to debug mode.
  debug: Boolean

  /// Medsenger Agent secret key.
  medsengerAgentKey: String
}

/// SQLite database configuration.
class Database {
  dbFilePath: String
}

/// Text file must contain release version or commit hash.
releaseFilePath: String

db: Database
server: Server